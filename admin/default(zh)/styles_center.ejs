            <div class="styles_center">
                <% infomations.styles.forEach(function(d){ %><div class="items">
                    <h4 class="blue"><%= d.name %> (作者:<%= d.author %>)</h4>
                    <div class="items_actions">
                        <ul>
                            <li><a href="#" class="green add_style" data-guid="<%= d.guid %>"><i class="material-icons">add_box</i><span>添加样式至列表</span></a></li>
